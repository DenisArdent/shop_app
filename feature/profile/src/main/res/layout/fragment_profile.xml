<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_card"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/light_grey"

        app:layout_constraintVertical_bias="0.06"
        app:layout_constraintWidth_percent="0.9"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="14dp"
            android:src="@drawable/ic_profile"
            />

        <TextView
            android:id="@+id/name_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            tools:text="Марина Ивановна"
            android:layout_marginStart="50dp"
            />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="7dp"
            android:textColor="@color/grey"
            tools:text="+ 7 993 877 44 02" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/liked_card"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/light_grey"

        app:layout_constraintVertical_bias="0.17"
        app:layout_constraintWidth_percent="0.9"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="14dp"
            android:src="@drawable/ic_liked_empty"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Избранное"
            android:layout_marginStart="50dp"
            />

        <TextView
            android:id="@+id/liked_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="7dp"
            android:textColor="@color/grey"
            tools:text="1 товар" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_right_arrow"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/shops_card"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/light_grey"

        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="8dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Rounded"
        app:layout_constraintTop_toBottomOf="@id/liked_card"
        app:layout_constraintBottom_toTopOf="@id/support_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="14dp"
            android:src="@drawable/ic_shop"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Магазины"
            android:layout_marginStart="50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_right_arrow"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/support_card"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/light_grey"

        app:layout_constraintWidth_percent="0.9"
        android:layout_marginVertical="8dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Rounded"
        app:layout_constraintTop_toBottomOf="@id/shops_card"
        app:layout_constraintBottom_toTopOf="@id/offer_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="14dp"
            android:src="@drawable/ic_message"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Обратная связь"
            android:layout_marginStart="50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_right_arrow"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/offer_card"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/light_grey"

        app:layout_constraintWidth_percent="0.9"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Rounded"
        app:layout_constraintTop_toBottomOf="@id/support_card"
        app:layout_constraintBottom_toTopOf="@id/refund_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="14dp"
            android:src="@drawable/ic_document"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Оферта"
            android:layout_marginStart="50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_right_arrow"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/refund_card"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/light_grey"

        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="8dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Rounded"
        app:layout_constraintTop_toBottomOf="@id/offer_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="14dp"
            android:src="@drawable/ic_refund"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Возврат товара"
            android:layout_marginStart="50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_right_arrow"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:rippleColor="@color/grey"
        android:backgroundTint="@color/light_grey"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:text="@string/exit_button"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Rounded"
        />

</androidx.constraintlayout.widget.ConstraintLayout>